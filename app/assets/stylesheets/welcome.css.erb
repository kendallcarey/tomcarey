/*Nav Bar*/

.nav-logo {
  text-decoration: none;
  color: white;
  font-size: 1.5rem;
  top: 1rem;
  padding-left: 0.5rem;
  padding-right: 0.5rem;
  padding-top: 0.3rem;
  padding-bottom: 0.4rem;
}

.nav-item {
  display: inline-block;
}

.navbar {
  width: 100%;
  height: 3.5rem;
  position: fixed;
  z-index: 1001;
  background-color: #343434;
  box-shadow: 0 3px 3px rgba(1,1,1,0.2);
  -webkit-box-shadow: 0 3px 3px rgba(1,1,1,0.2);
  -moz-box-shadow: 0 3px 3px rgba(1,1,1,0.2);
}

.navbar-right, .navbar-left {
  text-align: center;
  display: inline;
  position: fixed;
}

.navbar-left {
  margin-left: 3%;
  left: 0;
  margin-top: 1.2rem;
  min-width: 505px;
}

.navbar-right {
  margin-right: 5%;
  right: 0;
  margin-top: 1rem;

}

.nav-link {
  display: inline;
  color: white;
  padding-left: 1rem;
  padding-right: 1rem;
  top: 1rem;
}


.nav-link a {
  font-size: 0.9rem;
  text-decoration: none;
  color: white;
  position: relative;
}

.nav-link ul {
  display: none;
}

.nav-link ul li {
  padding: 1rem;
  float: right;
  background-color: #343434;
  box-shadow: 0 3px 3px rgba(1,1,1,0.2);
  -webkit-box-shadow: 0 3px 3px rgba(1,1,1,0.2);
  -moz-box-shadow: 0 3px 3px rgba(1,1,1,0.2);
}

.nav-link:hover > ul {
  display: block;
  padding-top: 1rem;
}

.navbar-left a:after {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1px;
  background: #73665d;
  content: '';
  opacity: 0;
  -webkit-transition: height 0.3s, opacity 0.3s, -webkit-transform 0.3s;
  -moz-transition: height 0.3s, opacity 0.3s, -moz-transform 0.3s;
  transition: height 0.3s, opacity 0.3s, transform 0.3s;
  -webkit-transform: translateY(-10px);
  -moz-transform: translateY(-10px);
  transform: translateY(-10px);
  background: #fff;
  top: 110%
}

.navbar-left a:hover:after {
  height: 3px;
  opacity: 1;
  -webkit-transform: translateY(0px);
  -moz-transform: translateY(0px);
  transform: translateY(0px);
}

.nav-logo{
  border: 1px solid white;
  border-radius: 0.35rem;
}

.nav-logo:hover{
  background-color: white;
}

